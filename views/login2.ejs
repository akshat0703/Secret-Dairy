  <script>
    $('#loginForm').on('keydown', 'input', function (event) {
    if (event.which == 13) {
        event.preventDefault();
        var $this = $(event.target);
        var index = parseFloat($this.attr('data-index'));
        if(index===2){
          $('#loginForm').submit();
        }
        $('[data-index="' + (index + 1).toString() + '"]').focus();
    }
   });
   $("nav").ready(function(){

    if ($(window).width() <= 767) {  
      $("nav").addClass("bg-dark");
    } 
    if ($(window).width() > 767) {  
      $("nav").removeClass("bg-dark");
    }       
    });
  </script>
  
